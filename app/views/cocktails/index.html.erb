<div class="cocktail-bg">
  <div class="container">
    <div class="row">
      <div class="col-4"></div>
      <div class="col-6">
        <div class="home-header">
          <h2>Make your own</h2>
          <p>Fill in your ingredients and mix your own creation</p>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="wrapper">
  <div class="container">
    <div class="row">

      <% @cocktails.each do |cocktail| %>
      <div class="col-4 ">
        <% if cocktail.photo.attached? %>
          <div class="card-trip" style="background-image: url('<%= cl_image_path cocktail.picture.key, crop: :fill %>')">
            <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
          </div>
        <% else %>
          <div class="card-trip" style="background-image: url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2098&q=80')">
            <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
          </div>
        <% end %>
      </div>
      <% end %>

    </div>
  </div>
</div>
